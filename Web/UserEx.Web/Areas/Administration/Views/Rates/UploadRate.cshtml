@model UploadRateModel

@{
	ViewData["Title"] = "Add Rate Deck.";
}

	<div class="row">
	<div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
		<h2 class="heading-margin text-center">Add Rate Deck</h2>
		
		<div asp-validation-summary="All"></div>

		<form method="post" asp-controller="Rates" asp-action="UploadRate" enctype = "multipart/form-data">
			<div class="form-group">
			<label asp-for="ProviderId"></label>
			<select asp-for="ProviderId" class="form-control">
				@foreach (var provider in Model.Providers)
				{
					<option value="@provider.Id">@provider.Name</option>
				}
			</select>
			<span asp-validation-for="ProviderId" class="small text-danger"></span>
			</div>

			<div class="form-group">
				<div class="row mt-2">
					<div class="col-12">
						<label class="col-form-label">Select File</label>
						<input type="file" name="file" class="form-control"/>
					</div>
				</div>
			</div>

			<div class="row mt-2">
				<div class="col-12">
					<button type="submit" class="btn btn-success">Upload File</button>
				</div>
			</div>
		</form>
	</div>
</div>